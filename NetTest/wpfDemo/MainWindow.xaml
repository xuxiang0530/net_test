        <StackPanel>
            <TextBox Name="tbColor"></TextBox>
            <u:MyDependencyProperty XuxColor="{Binding Path=Text,ElementName=tbColor}"></u:MyDependencyProperty>
        </StackPanel>
    </Grid>-->
</Window>
